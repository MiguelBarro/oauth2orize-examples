<!doctype html>
<html>
    <head>
        <link rel="icon" type="image/x-icon" href="favicon.png">
        <link rel="stylesheet" type="text/css" href="style.css">
    </head>
    <body>
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
       <script type="application/javascript" src="users_scripts.js"></script>
       <div>
           <img  alt="RAMP" src="big_logo.png" onclick="window.location.href='/'">
       </div>
       <form action="/users" method="GET" >
           <div class="table">
              <div>
                  <label></label>
                  <input type="hidden" name="id" value="<%=id%>" />
              </div>
              <div>
                  <label for="user_name">Client Name:</label>
                  <input type="text" name="user_name" value="<%=username%>" oninput="update()" />
              </div>
              <div>
                  <label>User Password:</label>
                  <!-- don't use password because only conditionaly visible -->
                  <input type="text" name="user_password" value="<%=password%>" oninput="update()" />
              </div>
              <div>
                  <label></label>
                  <button type="submit" name="clear"> Clear Form </button>
              </div>
              <div>
                  <label></label>
                  <button type="submit" name="modify"> Remove User </button>
              </div>
              <div>
                  <label></label>
                  <button type="submit" name="traverse" > Traverse </button>
              </div>
          <div>
        </form>
    </body>
</html>
